
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewBrowse</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script language="javascript">
        function populateReports(reports) {
            var content = "<table><tr><th>Id</th><th>User id</th><th>Type</th><th>Severity</th><th>Date posted</th></tr>";

            for (var rep of reports) {
                console.log(rep);
                content += "<tr><td>" + rep.Id + "</td>" +
                    "<td>" + rep.User_id + "</td>" +
                    "<td>" + rep.Type + "</td>" +
                    "<td>" + rep.Severity + "</td>" +
                    "<td>" + rep.Date + "</td>" +
                    "</tr>";
            }

            content += "</table>";
            $("#paginated-reports").html(content);
        }

        $(document).ready(function () {
            var pageSize = 2;
            var pageNo = 0;

            $("#next-btn").click(function () {
                $.getJSON(
                    "Browse/NextPage",
                    { pageNo:pageNo, pageSize:pageSize },
                    function (data, status) {
                        let result = data["success"];
                        if (result === "yes") {
                            pageNo = data["page"];
                            $.getJSON(
                                "Browse/GetPage", 
                                { pageNo: pageNo, pageSize: pageSize },
                                function (response, status) {
                                    populateReports(response["reports"]);
                                }
                            );
                        }
                    }
                );
            });

            $("#prev-btn").click(function () {
                $.getJSON(
                    "Browse/PreviousPage",
                    { pageNo: pageNo, pageSize: pageSize },
                    function (data, status) {
                        let result = data["success"];
                        if (result === "yes") {
                            pageNo = data["page"];
                            $.getJSON(
                                "Browse/GetPage",
                                { pageNo: pageNo, pageSize: pageSize },
                                function (response, status) {
                                    populateReports(response["reports"]);
                                }
                            );
                        }
                    }
                );
            });
        });
    </script>
</head>
<body>
    <a href="/Menu">Home</a>
    <br />
    <section id="paginated-reports">

    </section>
    <button type="button" id="next-btn">Next</button>
    <button type="button" id="prev-btn">Prev</button>
</body>
</html>
